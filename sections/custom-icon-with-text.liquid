{{ 'custom-icon-with-text.css' | asset_url | stylesheet_tag }}

<section class="custom-icon-with-text">
  <div class="custom-icon-container">
    <h2 class="main-title">{{ section.settings.heading }}</h2>
    <div class="icon-text-rows" >
      {% for block in section.blocks %}
        <div class="icon-text-row" >
          <div class="icon mobile-hide">
        {% if  block.settings.icon != blank   %}    {{ block.settings.icon  }} {% endif %}
          </div>
          <div class="text-content">
         {% if block.settings.title != blank %} <div class="icon-group"> <span class="icon desktop-hide">
        {% if  block.settings.icon != blank   %}    {{ block.settings.icon  }} {% endif %}
          </span> <h4> {{ block.settings.title }}</h4> </div>{% endif %}
         {% if block.settings.description != blank %}  <p> {{ block.settings.description }} </p> {% endif %}
       {% if  block.settings.button_text != blank %} <div class="button-group"><a href="{{ block.settings.button_link }}" class="learn-more-btn">{{ block.settings.button_text }} </a> {% render 'custom-arrow-right' %} </div>{% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Custom icon with text",
    "settings": [
        {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Horem ipsum dolor amet, consectetur"
    }
    ],
      "blocks": [
    {
      "type": "icon_text",
      "name": "Icon with Text",
      "limit": 3,
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon SVG"
        },
           {
          "type": "text",
          "id": "title",
          "label": "Block Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Text"
        },
          {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },

      ]
    }
  ],
     "presets": [
    {
      "name": "Custom icon with text",

    }
  ]
    
  }
{% endschema %}