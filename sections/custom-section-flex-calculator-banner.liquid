{{ 'custom-section-flex-calculator-banner.css' | asset_url | stylesheet_tag }}
<div class="section-container flexcalculator-banner">
  <div class="page-width row">
    <div class="section-inner-wrapper">
      {% if section.settings.desktop_image != blank %}
        <div class="image">
          <img src="{{ section.settings.desktop_image | image_url }}" height="auto" width="auto" class="desktop-img small-hide medium-hide"> 
          {% if section.settings.mobile_image != blank %}
            <img src="{{ section.settings.mobile_image | image_url }}" height="auto" width="auto" class="mobile-img large-up-hide medium-large-hide"> 
          {% else %}
            <img src="{{section.settings.desktop_image | image_url }}" height="auto" width="auto" class="desktop-img">
          {% endif %}
        </div>
      {% endif %}
      {% if section.settings.title != blank or section.settings.description != blank %}
        <div class="content">
        {% if section.settings.title != blank %}<h2 class="banner-heading h1">{{ section.settings.title }}</h2>{% endif %}
        {% if section.settings.description != blank %}<div class="banner-desc rte"><p>{{ section.settings.description }}</p></div>{% endif %}
        {% if section.settings.button-txt != blank %}
        <a href="{{ section.settings.button-link }}" class="button button--primary btn-primary btn-primary-hover">
            {{ section.settings.button-txt }}
        </a>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Flex Calculator Banner",
  "tag": "section",
  "class": "custom-flex-calc-banner",
  "settings": [
    {
      "type": "image_picker",
      "label": "Desktop Image",
      "id": "desktop_image"
    },
    {
      "type": "image_picker",
      "label": "Mobile Image",
      "id": "mobile_image"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "label": "Title",
      "id": "title"
    },
    {
      "type": "text",
      "label": "Description",
      "id": "description"
    },
    {
      "type": "url",
       "id": "button-link",
      "label": "Button Link"
    },
    {
      "type": "text",
       "id": "button-txt",
      "label": "Button Text"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Flex Calculator Banner"
    }
  ]
}
{% endschema %}