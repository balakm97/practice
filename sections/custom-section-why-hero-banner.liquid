{{ 'custom-section-why-hero-banner.css' | asset_url | stylesheet_tag }}

<div class="why-hero-banner">
  <div class="page-width">
    <div class="why-banner-wrapper">
      {% if section.settings.desktop_image != blank %}
        <div class="image">
          <img src="{{ section.settings.desktop_image | image_url }}" height="auto" width="auto" class="desktop-img small-hide"> 
          {% if section.settings.mobile_image != blank %}
            <img src="{{ section.settings.mobile_image | image_url }}" height="auto" width="auto" class="mobile-img large-up-hide medium-large-hide medium-hide"> 
          {% else %}
            <img src="{{section.settings.desktop_image | image_url }}" height="auto" width="auto" class="desktop-img">
          {% endif %}
        </div>
      {% endif %}
      {% if section.settings.title != blank or section.settings.description != blank %}
        <div class="content">
        {% if section.settings.title != blank %}<h2 class="banner-heading h1">{{ section.settings.title }}</h2>{% endif %}
        {% if section.settings.description != blank %}<div class="banner-desc rte"><p>{{ section.settings.description }}</p></div>{% endif %}
      </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Why Hero Banner",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "label": "Desktop Image",
      "id": "desktop_image"
    },
    {
      "type": "image_picker",
      "label": "Mobile Image",
      "id": "mobile_image"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "label": "Title",
      "id": "title"
    },
    {
      "type": "text",
      "label": "Description",
      "id": "description"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Why Hero Banner"
    }
  ]
}
{% endschema %}